<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context=".MainActivity">



        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AlertDialog Showcase"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a dialog type to test:"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type 1: Confirm Exit"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type 2: Single Choice"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#03A9F4"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type 3: Multi Choice"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type 4: Toggleable Single Choice"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF" />


</LinearLayout>
